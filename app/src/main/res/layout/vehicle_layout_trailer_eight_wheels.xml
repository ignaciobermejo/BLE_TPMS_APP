<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:keep="@layout/vehicle_layout_trailer_eight_wheels">

<ImageView
    android:id="@+id/vehicleImageView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="120dp"
    android:layout_marginTop="100dp"
    android:layout_marginEnd="120dp"
    android:layout_marginBottom="100dp"
    android:contentDescription="@string/vehicle_image"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0"
    tools:srcCompat="@drawable/car_trailer_4" />

<RelativeLayout
    android:id="@+id/layout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        style="@style/VehicleCard.Medium"/>

</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        style="@style/VehicleCard.Medium"/>
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/layout5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/layout1">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        style="@style/VehicleCard.Medium" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/layout6"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/layout2">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        style="@style/VehicleCard.Medium" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layout3"
    app:layout_constraintBottom_toTopOf="@id/layout7">

    <com.google.android.material.card.MaterialCardView style="@style/VehicleCard.Medium" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/layout4"
    app:layout_constraintBottom_toTopOf="@id/layout8">

    <com.google.android.material.card.MaterialCardView style="@style/VehicleCard.Medium" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.card.MaterialCardView style="@style/VehicleCard.Medium" />
</RelativeLayout>

<RelativeLayout
    android:id="@+id/layout8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.card.MaterialCardView style="@style/VehicleCard.Medium" />
</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
